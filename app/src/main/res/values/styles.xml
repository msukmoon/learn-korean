<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorPrimaryVariant</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorBackground</item>
    </style>

    <style name="ButtonThemeSmall" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonThemeLarge" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
